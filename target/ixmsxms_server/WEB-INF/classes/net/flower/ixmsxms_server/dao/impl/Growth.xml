<?xml version="1.1" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.flower.ixmsxms_server.dao.GrowthDao">
    <sql id="fromAndWhere">
        from growth
        where 1 = 1
    </sql>

    <select id="select"
            parameterType="Long"
            resultType="net.flower.ixmsxms_server.domain.Growth">
        select
        *
        <include refid="fromAndWhere"/>
        and growth_id = #{growthId}
    </select>

    <select id="selectListByUserId"
            parameterType="net.flower.ixmsxms_server.domain.Growth"
            resultType="net.flower.ixmsxms_server.domain.Growth">
        select
        *
        <include refid="fromAndWhere"/>
        and user_id = #{userId}
        and status = 'S'
    </select>
    <select id="selectListCountByUserId"
            parameterType="net.flower.ixmsxms_server.domain.Growth"
            resultType="int">
        select
        count(growth_id)
        <include refid="fromAndWhere"/>
        and user_id = #{userId}
        and status = 'S'
    </select>

    <insert id="insert"
            parameterType="net.flower.ixmsxms_server.domain.Growth">
        insert into growth
        (
         grow_date
        , stature
        , weight
        , note
        , status
        , reg_datetime
        , mod_datetime
        )
        values
        (
         #{growDate}
        , #{stature}
        , #{weight}
        , #{note}
        , 'S'
        , sysdate()
        , sysdate()
        )

        <selectKey keyProperty="growthId" resultType="Long" order="AFTER">
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update"
            parameterType="net.flower.ixmsxms_server.domain.Growth">
        update growth
        set
         grow_date = #{growDate}
        , stature = #{stature}
        , weight = #{weight}
        , note = #{note}
        , status = #{status}
        , mod_datetime = sysdate()
        where 1 = 1
        and growth_id = #{growthId}
    </update>

    <delete id="delete"
            parameterType="Long">
        delete from growth
        where 1 = 1
        and growth_id = #{growthId}
    </delete>
</mapper>